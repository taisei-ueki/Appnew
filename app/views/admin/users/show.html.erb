<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h2>会員情報詳細</h2>
      <table class="table table-hover">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <%= link_to "編集する",edit_admin_user_path(@user.id), class: "btn btn-success" %>
    </div>
  </div>
</div>