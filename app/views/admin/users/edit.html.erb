<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
      <h2>会員情報編集</h2>
      <table class="table table-hover">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>