<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h2>ジャンル追加</h2>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録" ,class: "btn btn-success" %>
      <% end %>
      <h2>ジャンル一覧</h2>
      <table class="table">
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>